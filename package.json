{
  "name": "apibase",
  "version": "1.0.0",
  "description": "RESTful API",
  "main": "app.ts",
  "repository": "https://github.com/akiosTerr/apibase.git",
  "author": "akiosterr",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "sucrase-node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "nodemon src/index.ts",
    "build": "tsc -b && yarn minify",
    "minify": "uglifyjs --compress --mangle --output dist/bundle.min.js -- dist/index.js",
    "esbuild": "esbuild --bundle --minify --external:express --loader=ts --platform=node <src/app.ts> dist/app.js",
    "webbuild": "esbuild --bundle --minify --loader=ts <src/client/main.ts> dist/main.js "
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.9.16"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-jest": "^26.5.2",
    "esbuild": "^0.4.3",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.5.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "sucrase": "^3.15.0",
    "ts-jest": "^26.4.1",
    "typescript": "^3.9.3",
    "uglify-js": "^3.9.4"
  }
}
